@if (PageCount > 0)
{
    <nav class="@NavigationCss" aria-label="Pagination">
        <a @onclick="() => PageChanged(0)" class="@PageCss @(CurrentPage == 1 ? string.Empty : CursorHover)">
            <span class="sr-only">First</span>
            <span class="mdi mdi-chevron-double-left @(ChevronCss)"></span>
        </a>
        <a @onclick="() => PageChanged(CurrentPage - 1)" class="@PageCss @(CurrentPage == 1 ? string.Empty : CursorHover)">
            <span class="sr-only">Previous</span>
            <span class="mdi mdi-chevron-left @(ChevronCss)"></span>
        </a>
        @for (var i = _startPage; i <= _endPage; i++)
        {
            var currentIndex = i;
            <a @onclick="() => PageChanged(currentIndex)" class="@(currentIndex == CurrentPage ? CurrentPageCss : PageCss + " " + CursorHover)">
                @(currentIndex + 1)
            </a>
        }
        <a @onclick="() => PageChanged(CurrentPage + 1)" class="@PageCss @(CurrentPage == PageCount ? string.Empty : CursorHover)">
            <span class="sr-only">Next</span>
            <span class="mdi mdi-chevron-right @(ChevronCss)"></span>
        </a>
        <a @onclick="() => PageChanged(PageCount)" class="@PageCss @(CurrentPage == PageCount ? string.Empty : CursorHover)">
            <span class="sr-only">Last</span>
            <span class="mdi mdi-chevron-double-right @(ChevronCss)"></span>
        </a>
    </nav>
}