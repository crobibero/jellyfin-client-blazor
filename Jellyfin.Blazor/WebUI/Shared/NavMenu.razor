<Sidebar>
    <SidebarContent>
        <SidebarBrand>
            <Figure Margin="Margin.Is2.OnMobile.Is5.OnDesktop">
                <FigureImage Source="images/jellyfin-banner-dark.svg" AlternateText="Jellyfin-Banner"/>
            </Figure>
        </SidebarBrand>
        <SidebarNavigation>
            <SidebarItem>
                <SidebarLink To="" Title="Dashboard">
                    <Icon Name="IconName.Home" Margin="Margin.Is3.FromRight"/>
                    Dashboard
                </SidebarLink>
            </SidebarItem>
            <Repeater Items="_views?.Items">
                <SidebarItem>
                    <SidebarLink To="@($"view/{@context.Id}")" Title="@context.Name">
                        <Icon Name="IconName.Tv" Margin="Margin.Is3.FromRight"/>
                        @context.Name
                    </SidebarLink>
                </SidebarItem>
            </Repeater>
            <SidebarItem>
                <SidebarLink To="logout" Title="Logout">
                    <Icon Name="IconName.Clear"/>
                    Logout
                </SidebarLink>
            </SidebarItem>
        </SidebarNavigation>
    </SidebarContent>
</Sidebar>